<!-- Product Display -->

<div class="container-fluid">
  <div class="row">
      <div class="swiper-container">
        <div class="swiper-wrapper">
              <% @products.each do |product| %>
                    <div class="swiper-slide">
                        <div class="text">
                        <p class="rangeName"><%= product.range_name.upcase %></p>
                        <p class="productName"><%= product.product_name %></p>
                        <p class="price">Â£<%= product.price_now %></p>
                        <p><%= link_to "Details", product_path(product.id) %></p>    
                        <p><%= link_to "Edit", edit_product_path(product.id) %></p>
                        </div>
                    </div>
              <% end %>
          </div> 
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
      </div>

    </div>
</div>



<!-- END: Pagination Display -->




<!-- Add products button -->      
<div class="container">
    <div class="row center">
    <!-- Link to new product form -->
    <%= link_to "Add product", new_product_path, class: "btn btn-default" %>
    </div>
</div>





